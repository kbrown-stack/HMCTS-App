<div class="page-header">
    <h2>Task Details</h2>
    <div class="header-actions">
      <a href="/tasks/edit/<%= task._id %>" class="btn btn-warning">Edit Task</a>
      <a href="/tasks" class="btn btn-secondary">Back to Dashboard</a>
    </div>
  </div>
  
  <div class="task-details">
    <div class="task-detail-card status-<%= task.status %>">
      <div class="task-header">
        <h3><%= task.title %></h3>
        <span class="task-status <%= task.status %>"><%= task.status.charAt(0).toUpperCase() + task.status.slice(1) %></span>
      </div>
      
      <% if (task.description) { %>
        <div class="task-description">
          <h4>Description:</h4>
          <p><%= task.description %></p>
        </div>
      <% } %>
      
      <div class="task-meta">
        <div class="meta-item">
          <strong>Due Date:</strong>
          <span><%= new Date(task.dueDate).toLocaleDateString() %></span>
        </div>
        <div class="meta-item">
          <strong>Created:</strong>
          <span><%= new Date(task.createdAt).toLocaleDateString() %></span>
        </div>
      </div>
      
      <div class="task-actions">
        <a href="/tasks/edit/<%= task._id %>" class="btn btn-warning">Edit</a>
        <form action="/tasks/delete/<%= task._id %>" method="POST" class="inline-form" onsubmit="return confirm('Are you sure you want to delete this task?');">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>